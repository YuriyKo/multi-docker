{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "yuriyko/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "yuriyko/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "yuriyko/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "yuriyko/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort" : 80,
                    "containerPort" : 80
                }
            ],
            "links": [
                "client",
                "server"
            ]

        }
    ]
}